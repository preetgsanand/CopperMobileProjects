<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="400dp"
    android:id="@+id/dialog_container"
    android:background="@drawable/header">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="120dp"
        android:background="#ECEFF1"
        android:id="@+id/relativeLayout3"
        android:paddingLeft="10dp"
        android:layout_alignParentEnd="true">

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/city"
        android:background="@drawable/round_edittext"
        android:hint="Enter City"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=">"
        android:id="@+id/submit"
        android:background="@drawable/round_button"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:onClick="submitCity"
        android:layout_alignTop="@+id/city"
        android:layout_toEndOf="@+id/city" />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:id="@+id/imageView5"
            android:background="#42A5F5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


        <ListView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/autocomplete_list"
            android:layout_alignParentStart="true"
            android:background="#ECEFF1"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentEnd="true" />
</RelativeLayout>