<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp" android:layout_height="200dp"
    android:background="#ECEFF1"
    android:paddingLeft="2dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">

<RelativeLayout
    android:layout_width="125dp"
    android:layout_height="200dp"
    android:background="@color/rain">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/weatherIcon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/sunny"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CLEAR SKY"
        android:id="@+id/description"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/weathericon"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/humidityIcon"
        android:layout_below="@+id/description"
        android:layout_alignStart="@+id/description"
        android:background="@drawable/humidity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="83 %"
        android:id="@+id/humidity"
        android:layout_below="@+id/description"
        android:layout_toEndOf="@+id/humidityIcon"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/windIcon"
        android:layout_below="@+id/humidityIcon"
        android:layout_alignStart="@+id/humidityIcon"
        android:background="@drawable/wind"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="109"
        android:id="@+id/wind"
        android:layout_below="@+id/humidity"
        android:layout_alignStart="@+id/humidity"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/pressureIcon"
        android:layout_below="@+id/wind"
        android:layout_alignStart="@+id/windIcon"
        android:layout_marginTop="5dp"
        android:background="@drawable/pressure"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1089"
        android:id="@+id/pressure"
        android:layout_alignTop="@+id/pressureIcon"
        android:layout_alignStart="@+id/wind"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10 JUL, 2016"
        android:id="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp" />
</RelativeLayout>
</RelativeLayout>