<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeet.jeet.weather.DetailFragment">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/header"
        android:layout_gravity="left|top"
        android:id="@+id/relativeLayout2" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/weatherIcon"
            android:background="@drawable/sunny_black"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/description"
            android:layout_alignStart="@+id/description"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2"
            android:layout_below="@+id/temperature"
            android:layout_centerHorizontal="true"
            android:background="@drawable/humidity_black" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/weatherIcon"
            android:layout_alignStart="@+id/weatherIcon"
            android:background="@drawable/wind_black" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView4"
            android:background="@drawable/pressure_black"
            android:layout_alignTop="@+id/weatherIcon"
            android:layout_alignStart="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="INDIA"
            android:id="@+id/country"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#42A5F5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Country"
            android:id="@+id/location"
            android:textColor="#2e2e2e"
            android:layout_below="@+id/country"
            android:layout_alignStart="@+id/country" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Description"
            android:id="@+id/description"
            android:layout_below="@+id/location"
            android:layout_alignStart="@+id/location"
            android:textColor="#2e2e2e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="32"
            android:id="@+id/temperature"
            android:textSize="60sp"
            android:textColor="#42A5F5"
            android:layout_above="@+id/wind"
            android:layout_toStartOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="O"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:textColor="#42A5F5"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/pressure"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MIN  40"
            android:id="@+id/mintemp"
            android:textColor="#2e2e2e"
            android:textAlignment="viewEnd"
            android:layout_below="@+id/temperature"
            android:layout_alignEnd="@+id/temperature" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MAX  40"
            android:id="@+id/maxtemp"
            android:textColor="#2e2e2e"
            android:layout_below="@+id/mintemp"
            android:layout_alignStart="@+id/mintemp"
            android:textAlignment="viewEnd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="89 %"
            android:id="@+id/humidity"
            android:layout_below="@+id/mintemp"
            android:layout_toEndOf="@+id/imageView2"
            android:textColor="#42A5F5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/wind"
            android:text="456"
            android:textColor="#42A5F5"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1013"
            android:id="@+id/pressure"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:textColor="#42A5F5"
            android:layout_marginTop="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="&lt;"
            android:id="@+id/back"
            android:layout_alignTop="@+id/country"
            android:layout_alignEnd="@+id/textView6"
            android:background="@drawable/round_button" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/imageView"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="#42A5F5" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:id="@+id/graphView">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </RelativeLayout>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView2"
        android:layout_gravity="center"
        android:numColumns="3"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-400dp"></GridView>

</RelativeLayout>
